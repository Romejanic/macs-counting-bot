{
    "$schema": "https://raw.githubusercontent.com/Romejanic/slasher/master/schema.json",

    "help": {
        "description": "Displays a list of commands that can be used",
        "permissions": {
            "requires": [
                "MANAGE_CHANNELS"
            ]
        }
    },

    "start": {
        "description": "Create a new thread and start the counter at zero",
        "permissions": {
            "requires": [
                "MANAGE_CHANNELS"
            ]
        }
    },

    "stop": {
        "description": "Stop the counter and delete the channel",
        "permissions": {
            "requires": [
                "MANAGE_CHANNELS"
            ]
        }
    },

    "clean": {
        "description": "Cleans the channels",
        "permissions": {
            "requires": [
                "MANAGE_CHANNELS"
            ]
        }
    },

    "stats": {
        "description": "Shows how many users have been excluded since channel creation"
    },

    "bans": {
        "description": "Shows how many bans a user has gotten",
        "options": {
            "target": {
                "description": "The user to view",
                "type": "user"
            }
        }
    }

}